<!-- a configuration to set up a platform with two agents that can ping each other -->

<jademx-config>
	<runtime>
		<platform>
			<options>
				<option>port=1098</option>
				<option>nomtp=true</option>				
			</options>			
			<agent-specifiers>
				<agent-specifier>
					<name>dummy</name>
					<class>jade.jademx.agent.JademxNopAgent</class>
				</agent-specifier>
			</agent-specifiers>			
		</platform>
	</runtime>
</jademx-config>
